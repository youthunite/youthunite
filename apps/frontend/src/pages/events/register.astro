          <textarea
            id="description"
            name="description"
            placeholder="Describe your event..."
            rows="4"
            class="w-full px-4 py-3 border border-input rounded-lg focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-all resize-vertical min-h-[100px]"
            required
