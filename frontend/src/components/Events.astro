<script>
    window.currentEventEmail = '';

    window.openSignupModal = function(title, org, date, time, location, eligibility, email) {
        window.currentEventEmail = email;
        document.getElementById('modalEventTitle').textContent = title;
        document.getElementById('modalEventOrg').textContent = org;
        document.getElementById('modalEventDate').textContent = date;
        document.getElementById('modalEventTime').textContent = time;
        document.getElementById('modalEventLocation').textContent = location;
        document.getElementById('modalEventEligibility').textContent = eligibility;
        document.getElementById('signupModal').style.display = 'block';
        document.body.style.overflow = 'hidden';
    };

    window.closeSignupModal = function() {
        document.getElementById('signupModal').style.display = 'none';
        document.body.style.overflow = 'auto';
        document.getElementById('signupForm').reset();
    };

    window.submitSignup = function(event) {
        event.preventDefault();
        
        const firstName = document.getElementById('firstName').value;
        const lastName = document.getElementById('lastName').value;
        const email = document.getElementById('email').value;
        const phone = document.getElementById('phone').value;
        const age = document.getElementById('age').value;
        const additionalInfo = document.getElementById('additionalInfo').value;
        const eventTitle = document.getElementById('modalEventTitle').textContent;
        const eventOrg = document.getElementById('modalEventOrg').textContent;

        const subject = `Event Sign-up: ${eventTitle}`;
        const body = `
New volunteer sign-up for ${eventTitle}

Volunteer Information:
- Name: ${firstName} ${lastName}
- Email: ${email}
- Phone: ${phone}
- Age: ${age}

Event: ${eventTitle}
Organization: ${eventOrg}

Additional Information:
${additionalInfo || 'None provided'}

Please contact the volunteer at ${email} or ${phone} to confirm their participation.

Best regards,
YouthUnite Platform
        `;

        const mailtoLink = `mailto:${window.currentEventEmail}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
        
        window.location.href = mailtoLink;
        
        alert('Thank you for your interest! Your default email client should open with a pre-filled message to send to the organizer. If it doesn\'t open automatically, please contact the organization directly.');
        
        window.closeSignupModal();
    };

    window.toggleFAQ = function(element) {
        const answer = element.nextElementSibling;
        const isHidden = answer.classList.contains('hidden');
        
        document.querySelectorAll('.faq-answer').forEach(faq => {
            faq.classList.add('hidden');
        });
        
        if (isHidden) {
            answer.classList.remove('hidden');
        }
    };

    window.filterEvents = function() {
        const searchTerm = document.getElementById('searchInput').value.toLowerCase();
        const locationFilter = document.getElementById('locationFilter').value;
        const causeFilter = document.getElementById('causeFilter').value;
        const eventCards = document.querySelectorAll('.event-card');

        eventCards.forEach(card => {
            const eventTitle = card.querySelector('.event-title').textContent.toLowerCase();
            const eventOrg = card.querySelector('.event-org').textContent.toLowerCase();
            const eventLocation = card.dataset.location;
            const eventCause = card.dataset.cause;

            const matchesSearch = eventTitle.includes(searchTerm) || eventOrg.includes(searchTerm);
            const matchesLocation = !locationFilter || eventLocation === locationFilter;
            const matchesCause = !causeFilter || eventCause === causeFilter;

            if (matchesSearch && matchesLocation && matchesCause) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    };

    document.addEventListener('DOMContentLoaded', function() {
        window.onclick = function(event) {
            const modal = document.getElementById('signupModal');
            if (event.target === modal) {
                window.closeSignupModal();
            }
        };

        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('fade-in');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.event-card').forEach(card => {
            observer.observe(card);
        });
    });
</script>
